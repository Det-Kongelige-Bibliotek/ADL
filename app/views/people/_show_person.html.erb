<%# default partial to display solr document fields in catalog show view -%>

<% document ||= @document %>
<% document_empty  = @document_empty || !FileServer.has_text(document.id) %>

<% # bookmark/folder functions -%>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="workHeader">
        <h1><span class="glyphicon glyphicon-user"></span> <%= document['work_title_tesim'].first %></h1>
        <dl class="dl-horizontal  dl-invert">
          <% document_show_fields(document).each do |field_name, field| -%>
              <% if should_render_show_field? document, field %>
                  <dt class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_label document, field: field_name %></dt>
                  <dd class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_value document, field: field_name %></dd>
              <% end -%>
          <% end -%>
        </dl>
        <hr>
        <h1><small> <%= t '.links' %></small></h1>
        <%= author_portrait_search_link(document[:given_name_ssi],document[:family_name_ssi],t('people.show_person.potrait')) %>
        <% @genres.each do |key, value| %>
            <a href="/?f[author_ssi][]=<%= document['author_name'].first %>&f[genre_ssi][]=<%= key %>"><%= key.to_s.capitalize %> (<%= value %>)</a><br>
        <%end %>
        <a href="/catalog/?f[author_ssi][]=<%= document['author_name'].first %>"> <%= t '.similar_works' %></a>

      </div>
    </div>
  </div>
</div>

