<%# default partial to display solr document fields in catalog show view -%>

<% has_text  = document['has_text_ssi'].present? && document['has_text_ssi'] == 'yes' %>
<% has_facs  = document['has_facs_ssi'].present? && document['has_facs_ssi'] == 'yes' %>


 <div class="container nav-tab-instance-fixContainer">
   <div class="row"><div class="col-md-12">
    <div class="nav-tab-instance">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active">
          <% if has_text %>
              <%= link_to(solr_document_path(document), disabled: !has_text) do %>
                  <%= bootstrap_glyphicon 'align-left' %>
                  Tekst
              <% end %>
          <% end %>
        </li>
        <li role="presentation">
          <% if has_facs %>
              <%# Note we need to use no_turbolink because turbolinks will fuck with the unveil library %>
              <%= link_to(facsimile_catalog_path(document.id) + "/", data: { no_turbolink: true }) do %>
                  <%= bootstrap_glyphicon 'book' %>
                  Faksimile
              <% end %>
          <% end %>
        </li>
      </ul>
      </div></div>
    </div>
 </div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if has_text %>
          <div class="text-content workContent">
            <div class="text">
              <% text = FileServer.render_snippet(document.id) %>
              <%= text.html_safe %>
            </div>
          </div>
      <% else %>
          <div class="text-content workContent">
            <div class="text">
              <%= t '.no_text' %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
