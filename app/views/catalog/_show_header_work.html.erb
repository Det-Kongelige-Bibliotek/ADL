<% document ||= @document %>
<% document_empty  = @document_empty || !FileServer.has_text(document.id) %>

<% # bookmark/folder functions -%>



<div class="workHeader">

  <div class="btn-toolbar" role="toolbar">
    <div class="btn-group" role="toolbar">
      <button type="button" class="btn btn-link">
        <span class="glyphicon glyphicon-bookmark" alt="Bookmark"></span> <span>Bookmark</span>
      </button>
      <%= render :partial => 'show_tools' %>
      <% unless document_empty %>
          <%= link_to(solr_document_path(document, format: :pdf), class:'btn btn-link', disabled: document_empty) do %>
              <%= bootstrap_glyphicon 'download-alt' %>
              Download
          <% end %>
      <% end %>
    </div>
  </div>
  <%= render_document_heading(document, :tag => :h1) %>

    <dl class="dl-horizontal  dl-invert">
      <% document_show_fields(document).each do |field_name, field| -%>
          <% if should_render_show_field? document, field %>
              <dt class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_label document, field: field_name %></dt>
              <dd class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_value document, field: field_name %></dd>
          <% end -%>
      <% end -%>
    </dl>




</div>



