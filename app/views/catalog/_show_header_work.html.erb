<% document ||= @document %>
<% # bookmark/folder functions -%>
<%= render_document_heading(document, :tag => :h1) %>
<dl class="dl-horizontal  dl-invert">
  <% document_show_fields(document).each do |field_name, field| -%>
      <% if should_render_show_field? document, field %>
          <dt class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_label document, field: field_name %></dt>
          <dd class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_value document, field: field_name %></dd>
      <% end -%>
  <% end -%>
</dl>
<%= link_to(solr_document_path(document), class: 'btn btn-default') do %>
    <%= bootstrap_glyphicon 'font' %><br/>
    Tekst
<% end %>
<%= link_to(solr_document_path(document, format: :pdf), class: 'btn btn-default') do %>
    <%= bootstrap_glyphicon 'save-file' %><br/>
    Download som PDF
<% end %>
<%# Note we need to use no_turbolink because turbolinks will fuck with the unveil library %>
<%# HACK -  We render the text already here so that we can link to the correct page in the full facsimile view %>
<%# See DE166 for more details %>
<% text ||= FileServer.render_snippet(document[:id]) %>
<% first_pb = first_page_link(text) %>
<% vol = document['volume_id_ssi'].present?  ? document['volume_id_ssi'] : document.id %>
<%= link_to(facsimile_catalog_path(vol) + "#{first_pb}", data: { no_turbolink: true }, class: 'btn btn-default') do %>
    <%= bootstrap_glyphicon 'picture' %><br/>
    Faksimile<br/>
<% end %>
<%= link_to(facsimile_catalog_path(vol, format: :pdf), class: 'btn btn-default') do %>
    <%= bootstrap_glyphicon 'save-file' %><br/>
    Download faksimile som pdf
<% end %>