
<% unless has_search_parameters? %>
    <%# if there are no input/search related params, display the "home" partial -%>
    <%= render 'home' %>
<% else %>

<% if has_search_parameters? %>

        <div class="search-not-main box-gradient-blue fixed-top-second">
          <div class="container search-bg">
            <%= render 'search_form' %>
          </div>
        </div>



        <div id="content" class="content-not-main">
          <div class="container">
            <div class="row">
          <%= render 'search_results' %>

              <div id="sidebar" class="<%= sidebar_classes %>">
                <%= render 'search_sidebar' %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
<% end %>

