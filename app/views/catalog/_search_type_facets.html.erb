<div class="panel panel-default facet_limit">
  <div class="collapsed collapse-toggle panel-heading" data-toggle="collapse" data-target="#search_type_facets">
    <h5 class="panel-title facet-field-heading">

      <%= link_to t('blacklight.search.facets.refine'), "#", :"data-no-turbolink" => true %>
    </h5>
  </div>
  <div id="search_type_facets" class="panel-collapse facet-content collapse">
    <div class="panel-body">
      <ul class="facet-values list-unstyled">
        <li><span class="facet-label"><%= search_type_link(t('blacklight.search.form.search.all_filters'), t('blacklight.search.facets.facet_fulltext')) %></span></li>
        <li><span class="facet-label"><%= search_type_link(t('blacklight.search.form.search.title'), t('blacklight.search.facets.facet_title')) %></span></li>
      </ul>
    </div>
  </div>
</div>


